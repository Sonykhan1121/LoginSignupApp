<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginpage"
    tools:context=".SignInActivity">

    <EditText
        android:id="@+id/email_id_signin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_txt"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textColor="#050505"
        android:textColorHint="#938686"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="147dp"
        android:layout_height="118dp"
        android:layout_marginTop="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_pagelogo" />

    <EditText
        android:id="@+id/pass_id_signin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/edit_txt"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="#050505"
        android:textColorHint="#938686"
        app:layout_constraintEnd_toEndOf="@+id/email_id_signin"
        app:layout_constraintStart_toStartOf="@+id/email_id_signin"
        app:layout_constraintTop_toBottomOf="@+id/email_id_signin" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_id_login"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btm_dr"
        android:text="Create"
        app:layout_constraintBottom_toBottomOf="@+id/login_id_login"
        app:layout_constraintEnd_toStartOf="@+id/login_id_login"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/login_id_login" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_id_login"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btm_dr"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/create_id_login"
        app:layout_constraintTop_toBottomOf="@+id/pass_id_signin" />
</androidx.constraintlayout.widget.ConstraintLayout>